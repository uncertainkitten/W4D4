<% if type == :new %>
  <% action_url = bands_url %>
  <%  button_val = "Add your jams!"%>
<% elsif type == :edit %>
  <%  action_url = band_url(band)%>
  <%  button_val = "Change your beats!"%>
<% end%>

<form action="<%= action_url%>" method="post">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <%end%>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token  %>">

  <label class="prompt">Band name:
  <input type="text" name="band[name]" value="<%= band.name%>">
</label>
  <br>
  <input type="submit" value="<%= button_val%>"">
</form>
